<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:padding="5dp"
                                             android:orientation="horizontal" android:id="@+id/linearLayout">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvArticleName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"/>


    <ImageView android:layout_width="match_parent"
               app:layout_constraintTop_toBottomOf="@+id/tvArticleName"
               android:id="@+id/ivNewsImage"
               android:contentDescription="@string/app_name"
               android:layout_height="wrap_content"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               android:adjustViewBounds="true"
               android:scaleType="fitXY"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
               app:layout_constraintStart_toStartOf="@+id/tvArticleName"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAuthor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivNewsImage"
            app:layout_constraintStart_toStartOf="@+id/ivNewsImage"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tvTime"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTime" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivNewsImage" app:layout_constraintStart_toEndOf="@+id/tvAuthor"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
    />


</android.support.constraint.ConstraintLayout>
